.list image{
    width:100px;
    height:100px;
}

.show{
    width:100%;
    display: flex;
    font-size: 12px;
  
}

.list{
      margin-top: 10px;
      position: relative;
}

.list  .change{
    position:absolute;
    right:0;
    left:0;
    bottom:0;
    top:0;
    background:0;
    margin:0;
    padding:0;

}

.list  .change::after{
    border:0;
}

.show  text{
    display: block;
    padding: 10px;
    flex: 1;
}

.back_button{
    width:100%;
    height:40px;
    line-height: 40px;
}